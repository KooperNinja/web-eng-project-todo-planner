datasource db {
    provider    = "postgresql"
    url         = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Todo {
    id  Int @id @default(autoincrement())
    owner User @relation(fields: [ownerId], references: [id])
    ownerId Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title String 
    descritpion String
    startAt DateTime 
    duration Int 
}

model User {
    id Int @id @default(autoincrement())
    name String 
    todos Todo[]
}